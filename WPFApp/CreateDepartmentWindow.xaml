<Window x:Class="WPFApp.CreateDepartmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp"
        mc:Ignorable="d"
        Title="CreateDepartmentWindow" Height="195" Width="316">
    <Grid Background="#FFE5E5E5">
        <TextBox x:Name="DepartNameTXT" HorizontalAlignment="Left" Margin="124,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="CreateDepBTT" Content="Create" HorizontalAlignment="Left" Margin="165,113,0,0" VerticalAlignment="Top" Click="CreateDepBTT_Click"/>
        <Label Content="Create New Department" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Department Name:" HorizontalAlignment="Left" Margin="10,79,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
