<Window x:Class="WPFApp.CreateCaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp"
        mc:Ignorable="d"
        Title="CreateCaseWindow" Height="266" Width="256">
    <Grid Background="#FFE5E5E5">
        <TextBox x:Name="NameTXT" HorizontalAlignment="Left" Margin="115,69,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="DescriptionTXT" HorizontalAlignment="Left" Margin="115,109,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="69"/>
        <ComboBox x:Name="DepartmentCB" HorizontalAlignment="Left" Margin="115,35,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="CreateBTT" Content="Create" HorizontalAlignment="Left" Margin="155,192,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Label Content="Department:" HorizontalAlignment="Left" Margin="34,33,0,0" VerticalAlignment="Top"/>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="66,65,0,0" VerticalAlignment="Top"/>
        <Label Content="Description:" HorizontalAlignment="Left" Margin="42,103,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
